<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.hidden_field :friend_karma_value %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </div>
  <div class="field">
    <%= f.label :group_id %><br />
    <%= f.collection_select(:group_id, current_user.groups, :id, :name) %>
  </div>
  <div class="field">
    <%= f.hidden_field :membership_id %>
  </div>

  <div class="field">
    <%= f.check_box "Do you want someone else to do this for you?",:asked %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
